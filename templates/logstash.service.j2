[Unit]
Description=Logstash
Documentation=https://www.elastic.co
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
RuntimeDirectory=logstash
PrivateTmp=true
Environment=LS_HOME=/opt/logstash
Environment=LS_PATH_CONF=/opt/logstash/config
Environment=PID_DIR=/var/run/logstash
EnvironmentFile=-/etc/default/logstash

WorkingDirectory=/opt/logstash

User=elasticsearch
Group=elasticsearch

ExecStart=/opt/logstash/bin/logstash

# Specifies the maximum file descriptor number that can be opened by this process
LimitNOFILE=65536

# Specifies the maximum number of processes
LimitNPROC=4096

# Specifies the maximum size of virtual memory
LimitAS=infinity

# Specifies the maximum file size
LimitFSIZE=infinity

# Disable timeout logic and wait until process is stopped
TimeoutStopSec=0

# SIGTERM signal is used to stop the Java process
KillSignal=SIGTERM

# Send the signal only to the JVM rather than its control group
KillMode=mixed

# Java process is never killed
SendSIGKILL=no

# When a JVM receives a SIGTERM signal it exits with code 143
SuccessExitStatus=143

# Allow a slow startup before the systemd notifier module kicks in to extend the timeout
TimeoutStartSec=75

# The number of seconds to wait for the elasticsearch process to start
TimeoutStartFailureMode=continue

# Restart service when it crashes
Restart=always

# Restart service after 5 seconds
RestartSec=5

# Give systemd time to configure the /proc filesystem
TimeoutStopSec=0

# The number of seconds to wait for the elasticsearch process to stop
TimeoutStopFailureMode=continue

# StandardOutput is configured to append to /var/log/logstash/stdout.log
StandardOutput=append:/var/log/logstash/stdout.log

# StandardError is configured to append to /var/log/logstash/stderr.log
StandardError=append:/var/log/logstash/stderr.log

[Install]
WantedBy=multi-user.target